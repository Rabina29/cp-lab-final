#include<bits/stdc++.h>


using namespace std;


bool checkperfect (int num)


{


    if(num<=1) return false;


    int sum = 1;


    for(int i=2;i*i<=num;i++){


        if(num%i==0){


            sum+=i;


            int x=num/i;


            if(x!=i)


                sum+=x;


        }


    }


    return sum==num;


}


int main(){


    int x;


    cin>>x;


    if(checkperfect(x))


        cout<< "true" <<endl;


    else


        cout<< "false"<<endl;


    return 0;











}
